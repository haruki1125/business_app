<div class="up"></div>
<div class="down"></div>
<div class="line"></div>
<div class="hero">
  <video src="/assets/videos/video.mp4" autoplay loop muted></video>
  <%= link_to "Welcome to the world of memos", notes_index_path, class: "top-message" %>
</div>
<script>
  $(".line").animate({"width":"100%"},1500,function() {
    $(".line").css("right",0)
    $(".line").animate({"width":"0%"},function () {
      $(".up").animate({"height":"0%"});
      $(".down").animate({"height":"0%"},500,function (){
        $(".top-message").fadeIn("slow")
      });
    });
  })
</script>